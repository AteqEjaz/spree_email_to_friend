<h1><%= Spree.t(:tell_about, scope: :email_to_friend, product: @object.name) %></h1>

<%= form_for(@mail_to_friend, url: email_to_friend_path(params[:type], @object)) do |f| -%>
  <%= render 'spree/shared/error_messages', target: @mail_to_friend %>
  <p>
    <%= f.label :sender_name, Spree.t(:sender_name, scope: :email_to_friend) %><br/>
    <%= f.text_field(:sender_name) %>
  </p>
  <p>
    <%= f.label :sender_email, Spree.t(:sender_email, scope: :email_to_friend) %><br/>
    <%= f.text_field(:sender_email) %>
  </p>
  <p>
    <%= f.label :recipient_name, Spree.t(:recipient_name, scope: :email_to_friend) %><br/>
    <%= f.text_field(:recipient_name) %>
  </p>
  <p>
    <%= f.label :recipient_email, Spree.t(:recipient_email, scope: :email_to_friend) %><br/>
    <%= f.text_field(:recipient_email) %>
  </p>
  <p>
    <%= f.label :message, Spree.t(:message, scope: :email_to_friend) %><br/>
    <%= f.text_area(:message) %>
  </p>
  <% if Spree::Captcha::Config[:use_captcha] %>
    <%= recaptcha_tags public_key: Spree::Captcha::Config[:public_key], display: { theme: Spree::Captcha::Config[:theme] } %>
  <% end %>
  <p>
    <%= f.submit Spree.t(:send_message, scope: :email_to_friend) %>
  </p>
<% end -%>
